.container
  .row
    p#notice
      = notice
    .panel.panel-default.panel-primary
      .panel-body.panel-primary
        h4  
           = "Campo: #{@dicdado.nome}"
        .list-group
          .list-group-item
            h4.list-group-item-heading
              | Tipo do Ativo
            p.list-group-item-text
              = @dicdado.nice_tipoci
          .list-group-item
            h4.list-group-item-heading
              | Apelido
            p.list-group-item-text
              = @dicdado.apelido
          .list-group-item
            h4.list-group-item-heading
              | Descricao/Placeholder
            p.list-group-item-text
              = @dicdado.descricao
          .list-group-item
            h4.list-group-item-heading
              | Valores
            p.list-group-item-text
              = @dicdado.valores
          .list-group-item
            h4.list-group-item-heading
              | Ordem de Apresentacao
            p.list-group-item-text
              = @dicdado.ordem         
          .list-group-item
            h4.list-group-item-heading
              | Tab do formulario de ativos
            p.list-group-item-text
              = @dicdado.tab
          .list-group-item
            h4.list-group-item-heading
              | Expressao Regular
            p.list-group-item-text
              = @dicdado.regex
          .list-group-item
            h4.list-group-item-heading
              | Campo Mandatorio ? 
            p.list-group-item-text
              = @dicdado.mandatorio ? "Sim" : "Nao"           
          .list-group-item
            h4.list-group-item-heading
              | URL  
            p.list-group-item-text
              = @dicdado.url          
          .list-group-item
            h4.list-group-item-heading
              | Comentarios  
            p.list-group-item-text
              = @dicdado.comentarios
    - if (can? :manage, Dicdado)
      = link_to 'Editar', edit_dicdado_path(@dicdado), :class => "btn btn-primary btn-md margin-left"
      = link_to 'Novo Campo', new_dicdado_path, class: "btn btn-primary btn-md margin-left" 
      = link_to 'Duplicar', duplicar_dicdado_path(@dicdado), class: "btn btn-primary btn-md margin-left" 
    = link_to 'Listagem', dicdados_path , :class => "btn btn-primary btn-md margin-left"



