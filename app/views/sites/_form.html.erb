<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "erro") %> ao salvar esse Site</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<label>Site
</label>
<%= f.text_field :nome %>
<div class="spacer"></div>

<label>Estado
</label>
<%= f.select :estado, (["SP", "RJ" , "PR", "DF", "PE", "BA","RN","AC","AL","AP","AM","CE","ES","GO","MA","MT","MS","MG","PA","PB","PI","RS","RO","RR","SC","SE","TO"]) %>
<div class="spacer"></div>  

  <div class="actions">
     <%= f.submit %>
  </div>
<% end %>
<div class="spacer"></div>  
