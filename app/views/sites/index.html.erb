<h1>Sites</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Estado</th>

    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.nome %></td>
    <td><%= site.estado %></td>
    <td><%= link_to 'Editar', edit_site_path(site) %></td>
    <td><%= link_to 'Apagar', site, :confirm => 'Voce confirma?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '[Novo Site]', new_site_path %>
