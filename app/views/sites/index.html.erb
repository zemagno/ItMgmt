<% title "GAM. Sites." %>
<!-- <%= csrf_meta_tag %> -->
<script type="text/javascript">
$(document).ready( function(){
    $('#coolTable').DataTable({
      pageLength: 25,
      pagingType: "full_numbers",
      language: { 
          search: "Filtrar:" ,
          infoFiltered: "(Total de _MAX_ registros)",
          info:   "Mostrando do registro _START_ até _END_ de um total de  _TOTAL_ filtrados",
          "lengthMenu":     "Mostrar _MENU_ registros",
          "paginate": {
              "first":      "Primeira",
              "last":       "Última",
              "next":       "Próxima",
              "previous":   "Anterior"
          },
          "infoEmpty":      "Mostrando do registro 0 até 0 de um total de 0 registros",
          "zeroRecords":    "Nenhum registro achado",
          }   

      
    })
});
</script>
<div id="content">
  <div class="panel panel-default">
    <div class="panel-heading">
      <% if (can? :manage, Site)  %>
      <%= link_to 'Novo Site', new_site_path, class: "btn btn-primary btn-xs"  %>
      <% end %>
    </div>
    <div class="panel-body">
      <table id="coolTable" class="generalTable">
        <thead>
          <tr class="head">
            <th>Nome</th>
            <th>Estado</th>
            <% if (can? :manage, Site)  %>
            <th></th>
            
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @sites.each do |site| %>
            <tr>
              <td><%= link_to(site.nome, site_path(site)) %></td>
              <td><%= site.estado %></td>
              <% if (can? :manage, Site)  %>
              <td>
                <%= link_to 'Editar', edit_site_path(site), class: "btn btn-primary btn-xs" %>
                <%= link_to 'Excluir', site,  class: "btn btn-danger btn-xs", data: { confirm: "Voce realmente deseja excluir o site #{site.nome} ?"} , :method => :delete %>
              </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="panel-heading">
      <% if (can? :manage, Site)  %>
      <%= link_to 'Novo Site', new_site_path, class: "btn btn-primary btn-xs" %>
      <% end %>
    </div>
  </div>