<h1>Checklists</h1>

<table>
  <tr>
    <th>Descricao</th>
    <th>Area</th>
    <th>Tipoci</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @checklists.each do |checklist| %>
  <tr>
     <td><%= link_to checklist.descricao, checklist %></td>
    <td><%= checklist.arearesponsabilidade  %></td>
    <td><%= checklist.tipoci_tipo %></td>
   
    <td><%= link_to 'Iniciar', new_checklist_init_checklist_path(checklist) %></td>
    <td><%= link_to 'Editar', edit_checklist_path(checklist) %></td>
    <td><%= link_to 'Apagar', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

