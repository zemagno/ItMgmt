<%= form_for(@checklist) do |f| %>
  <% if @checklist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@checklist.errors.count, "error") %> prohibited this checklist from being saved:</h2>

      <ul>
      <% @checklist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :Checklist %><br />
    <%= f.text_field :titulo, :size => 100 %>
  </div>

   <div class="field">
     <%= f.label :Descricao %><br />
       <%= f.text_area :descricao, :size => "50x30" %>
   </div>
   
  <div class="field">
    <%= f.label :Alias %><br />
    <%= f.text_field :alias, :size => 20 %>
  </div>

  <div class="field">
    <%= f.label "Abrir Ticket?" %>
    <%= f.check_box :abrir_ticket %>
  </div>

  <div class="field">
    <%= f.label "Tipo CI" %><br />
    
    <%= f.select :tipoci_id, @tiposci.collect { |c| [ c.tipo, c.id ] } %>
  </div>

   <div class="field">
    <%= f.label "Area de Responsabilidade" %><br />
    
    <%= f.select :area_responsabilidade_id, @arearesponsabilidade.collect { |a| [ a.area, a.id ] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
