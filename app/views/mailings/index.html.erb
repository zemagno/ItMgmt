<h1>Mailing</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>To</th>
    <th>Cc</th>
    <th>Subject</th>
    <th>Body</th>
    <th>Templates email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mailings.each do |mailing| %>
  <tr>
    <td><%= mailing.tag %></td>
    <td><%= mailing.to %></td>
    <td><%= mailing.cc %></td>
    <td><%= mailing.subject %></td>
    <td><%= mailing.body %></td>
    <td><%= mailing.templates_email.nome %></td>
    <td><%= link_to 'Mostrar', mailing %></td>
    <td><%= link_to 'Editar', edit_mailing_path(mailing) %></td>
    <td><%= link_to 'Deletar', mailing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

