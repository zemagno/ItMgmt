<h1>Templates de Email</h1>

<%= link_to '[Novo Template]', new_sql_template_path %>
<table>
  <tr>
    <th>Path</th>
    <th>Format</th>
    <th>Locale</th>
    <th>Handler</th>
    <th>Partial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sql_templates.each do |sql_template| %>
  <tr>
    <td><%= sql_template.path %></td>
    <td><%= sql_template.format %></td>
    <td><%= sql_template.locale %></td>
    <td><%= sql_template.handler %></td>
    <td><%= sql_template.partial %></td>
    <td><%= link_to 'Vizualizar', sql_template %></td>
    <td><%= link_to 'Editar', edit_sql_template_path(sql_template) %></td>
    <td><%= link_to 'Excluir', sql_template, method: :delete, data: { confirm: "Voce realmente deseja excluir o template de email #{sql_template.path} ?" } %></td>
  </tr>
<% end %>
</table>

