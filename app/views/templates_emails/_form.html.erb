<div id="stylized" class="myform">
<%= form_for(@templates_email) do |f| %>
  <% if @templates_email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@templates_email.errors.count, "error") %> prohibited this templates_email from being saved:</h2>

      <ul>
      <% @templates_email.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<label>Template
<span class="small">Nome interno do template</span>
</label>
<%= f.text_field :template %>
<div class="spacer"></div>

<label>Nome
<span class="small">Nome publico do template</span>
</label>
<%= f.text_field :nome %>
<div class="spacer"></div>

<label>Tipo
<span class="small">(CI, Contratos, Password, etc)</span>
</label>
<%= f.select :tipo, (["CI", "ALERTAS", "MAILING","GESTAO USUARIO","GESTAO LICENCA"]) %>
<div class="spacer"></div>

<label>Subtipo
<span class="small">(servidor, contrato, link, etc)</span>
</label>
<%= f.text_field :subtipo %>
 
<div class="spacer"></div>
 
<label>Enviar via Brower
<span class="small">Ou direto</span>
</label>
<%= f.check_box :sync %>
<div class="spacer"></div>

<div class="actions">
   <%= f.submit %>
</div>

<div class="spacer"></div>

<% end %>
</div>