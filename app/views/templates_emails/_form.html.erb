  <div class="spacer"></div>
  <label>Subtipo
    <span class="small">(servidor, contrato, link, etc)</span>
  </label>
  <%= f.text_field :subtipo %>
  
  <div class="spacer"></div>
  
  <label>Enviar via Brower
    <span class="small">Ou direto</span>
  </label>
