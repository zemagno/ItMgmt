    <h2><%= pluralize(@templates_email.errors.count, "error") %> ao tentar salvar esse email</h2>
    <ul>
      <% @templates_email.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <label>Template
    <span class="small">Nome interno do template</span>
  </label>
  <%= f.text_field :template %>
