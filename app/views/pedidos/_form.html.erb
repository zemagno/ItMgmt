<%= form_for(@pedido) do |f| %>
  <% if @pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

      <ul>
      <% @pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :requisicao %>
    <%= f.text_field :requisicao  %>
  </div>
<br />
  <div class="field">
    <%= f.label :status %>
   	<%= f.select :status_pedido_id, @statuspedido.collect { |c| [ c.status, c.id ] } %>
  </div>
<br />
  <div class="field">
    <%= f.label "Login do Solicitante" %>
    <%= f.text_field :solicitante, 
				:size => Pedido::LOGIN_SCREEN_SIZE,
				:maxlength => Pedido::LOGIN_MAX_LENGTH %>@brq.com
<br/><br />	
  </div>
  <div class="field">
    <%= f.label 'Login do Usuario' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :loginUsuario,
				:size => Pedido::LOGIN_SCREEN_SIZE,
				:maxlength => Pedido::LOGIN_MAX_LENGTH %>@brq.com
  </div>
<br/>	
  <div class="field">
    <%= f.label :dataPedido, 'Data do Pedido'%>
    <%= f.date_select :dataPedido %>
  </div>
  <div class="field">
    <%= f.label :dataAutorizacao, 'Data da Autorizacao' %>
