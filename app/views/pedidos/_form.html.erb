  <div class="field">
    <%= f.label :CCUN, 'CC UN' %>
    <%= f.text_field :CCUN %>
  </div>
<br />
  <div class="field">
    <%= f.label :projetoUN, 'Projeto UN' %>
    <%= f.text_field :projetoUN %>
  </div>
<br />
  <div class="field">
    <%= f.label :ccTI, 'CC TI' %>
    <%= f.text_field :ccTI %>
  </div>
<br />
  <div class="field">
    <%= f.label :projetoTI, 'Projeto TI' %>
    <%= f.text_field :projetoTI %>
  </div>
<br />
  <div class="actions">
    <%= f.submit %>
  </div>
