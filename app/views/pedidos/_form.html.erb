  </div>
  <div class="field">
    <%= f.label :comprador %><br />
    <%= f.text_field :comprador, 
				:size => Pedido::LOGIN_SCREEN_SIZE,
				:maxlength => Pedido::LOGIN_MAX_LENGTH %>@brq.com
  </div>
<br />
  <div class="field">
 	<%= f.label :Site %>
	<%= f.select :site_id, @sites.collect { |c| [ c.nome, c.id ] } %>
  </div>
<br />
  <div class="field">
    <%= f.label :ativo %>
    <%= f.text_field :ativo %>
  </div>
<br />
  <div class="field">
