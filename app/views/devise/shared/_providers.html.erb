<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider==:google_oauth2   %> 
        <% if CONFIG["authentication"]["google"] %>
         <%= link_to "Se logar com Google", omniauth_authorize_path(resource_name, provider)  %><br />
        <% end %>
    <% elsif provider==:azureactivedirectory %> 
        <% if CONFIG["authentication"]["azure"] %>
         <%= link_to "Se logar com Azure", omniauth_authorize_path(resource_name, provider)  %><br />
        <% end%> 
    <% else %>
	    <%= link_to "Se logar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
    <% end %>
  <% end -%>
<% end -%>