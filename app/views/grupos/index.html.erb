<h1>Listing grupos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Data Criacao</th>
    <th>Data Validade</th>
    <th>Solicitante</th>
    <th>Chamado</th>

    <th></th>
    <th></th>
  </tr>

<% @grupos.each do |grupo| %>
  <tr>
    <td><%= grupo.nome %></td>
    <td><%= grupo.descricao %></td>
    <td><%= grupo.dataCriacao %></td>
    <td><%= grupo.dataValidade %></td>
    <td><%= grupo.solicitante %></td>
    <td><%= grupo.chamado %></td>

    <td><%= link_to 'Editar', edit_grupo_path(grupo) %></td>
    <td><%= link_to 'Apagar Grupo', grupo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

