<script type="text/javascript">
$(document).ready( function(){ $('#coolTable').DataTable({ pageLength: 100,  pagingType: "full_numbers", language: { search: "Filtrar:" } }) });
</script>
<div id="content">
	<div class="panel panel-default">
		<div class="panel-body">
			<table class="generalTable" id="coolTable">
				<thead>
					<tr class="head">
						<th>Usuario</th>
						<th>Login</th>
						<th>Perfil</th>
						<% if (can? :manage, User) %>
							<th></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= link_to user.name, user_path(user) %></td>
							<td><%= user.login %></td>
							<td><%= user.roles %></td>
							<% if (can? :manage, User) %>
								<td>
									<%= link_to 'Editar', edit_user_path(user),   class: "btn btn-primary btn-xs" %>
									<%= link_to 'Apagar', user, method: :delete,  class: "btn btn-danger btn-xs", data: { confirm: "Voce realmente deseja apagar o usuario #{user.name} ?" } %>
								</td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>