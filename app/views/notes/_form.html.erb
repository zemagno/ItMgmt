<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "erro") %> ao tentar salver o note </h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :notes, :size => "150x30" %>
  </div>
  <div class="actions">
    <%= f.submit %>
    
  </div>
<% end %>
