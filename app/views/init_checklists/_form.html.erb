<%= form_for([:checklist,@init_checklist]) do |f| %>
  <% if @init_checklist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@init_checklist.errors.count, "error") %> prohibited this init_checklist from being saved:</h2>

      <ul>
      <% @init_checklist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao, :size => 100 %>
  </div>
  <div class="field">
    <%= f.label :users %><br />
    <%= f.text_field :users, :size => 50 %>
  </div>
  
  <div class="field">
    <%= f.label :cis %><br />
    <%= f.text_field :cis, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label "Agrupar itens dentro um unico ticket ? " %>
    <%= f.select :agrupar, (["Nao agrupar", "Agrupar"]) %>
  </div>


  <div class="field">
    <%= f.label :inicioexec %><br />
    <%= f.text_field :inicioexec, :id => "datepicker1", :value =>   "2014/03/15 05:06"  %>
  </div>
  <div class="field">
    <%= f.label :fimexec %><br />
    <%= f.text_field :fimexec, :id => "datepicker2"  %>
  </div>


  <%= f.hidden_field :checklist_id  %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>