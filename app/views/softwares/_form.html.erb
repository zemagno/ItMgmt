<%= form_for(@software) do |f| %>
  <% if @software.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@software.errors.count, "erro") %> ao tentar salver o custo_software </h2>

      <ul>
      <% @software.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Software %><br />
    <%= f.text_field :software %>
  </div>
  <div class="field">
    <%= f.label "Custo Mensal" %><br />
    <%= f.text_field :custoMensal %>
  </div>
  <div class="field">
    <%= f.label "Status" %><br />
    <%= f.number_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
